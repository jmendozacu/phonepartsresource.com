<?xml version="1.0" ?>
<config>
    <modules>
        <Mivec_Product>
            <version>0.1</version>
        </Mivec_Product>
    </modules>

    <frontend>
        <routers>
            <product>
                <use>standard</use>
                <args>
                    <module>Mivec_Product</module>
                    <frontName>product</frontName>
                </args>
            </product>
        </routers>
        <layout>
            <updates>
                <product>
                    <file>mivec/product.xml</file>
                </product>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <product>
                <use>admin</use>
                <args>
                    <module>Mivec_Product</module>
                    <frontName>product</frontName>
                </args>
            </product>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <mivec module="ship">
                <title>MIVEC</title>
                <sort_order>71</sort_order>
                <children>
                    <product translate="title" module="ship">
                        <title>Product</title>
                        <sort_order>71</sort_order>
                        <children>
                            <quotes module="ship" translate="title">
                                <title>Quotes</title>
                                <sort_order>1</sort_order>
                                <action>product/adminhtml_quote</action>
                            </quotes>
                        </children>
                    </product>
                </children>
            </mivec>
        </menu>
        <layout>
            <updates>
                <product>
                    <file>mivec_product.xml</file>
                </product>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <models>
            <product>
                <class>Mivec_Product_Model</class>
                <resourceModel>product_mysql4</resourceModel>
            </product>
            <product_mysql4>
                <class>Mivec_Product_Model_Mysql4</class>
                <entities>
                    <quote>
                        <table>mivec_product_quote</table>
                    </quote>
                </entities>
            </product_mysql4>
        </models>
        <resources>
            <product_setup>
                <setup>
                    <module>Mivec_Product</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </product_setup>
            <product_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </product_write>
            <product_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </product_read>
        </resources>
        <blocks>
            <product>
                <class>Mivec_Product_Block</class>
            </product>
        </blocks>
        <helpers>
            <product>
                <class>Mivec_Product_Helper</class>
            </product>
        </helpers>
    </global>
</config>